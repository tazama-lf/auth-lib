{
  "name": "@tazama-lf/auth-lib",
  "version": "2.0.1",
  "description": "Authentication Library for Tazama",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "npx rimraf lib node_modules coverage package-lock.json",
    "dev": "node -r dotenv/config -r ts-node/register src/index.ts",
    "dry": "npm publish --dry-run",
    "pempriv": "openssl genpkey -algorithm RSA -out private-key.pem -pkeyopt rsa_keygen_bits:2048",
    "pempub": "openssl rsa -pubout -in private-key.pem -out public-key.pem",
    "test": "npm run pempriv && npm rum pempub && jest --config=jest.config.ts --passWithNoTests",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint",
    "lint:eslint-unused": "eslint --report-unused-disable-directives",
    "lint:eslint-no-inline": "eslint --no-inline-config",
    "lint:prettier": "prettier --check \"**/*.ts\""
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "@tazama-lf:registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tazama-lf/auth-lib.git"
  },
  "keywords": [
    "authentication"
  ],
  "author": "Jean-Pierre Nell",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tazama-lf/auth-lib/issues"
  },
  "homepage": "https://github.com/tazama-lf/auth-lib#readme",
  "engines": {
    "node": ">=22.17"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "dotenv": "^17.0.1",
    "eslint": "^9.30.1",
    "eslint-config-love": "^121.0.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
